---
const {title, description, date} = Astro.props;
const {class: className} = Astro.props;
---

<div class={`flex ${className} items-center`}> 
    <div class=`max-w-sm p-6 border rounded-lg shadow-sm bg-(--color-beige) dark:border-gray-700`>
        <p class="mb-2 font-normal text-gray-700 text-xl">{date}</p>
        <h3 class="mb-2 text-2xl font-medium tracking-tight">{title}</h3>
        <p class="mb-3 font-normal text-gray-700">{description}</p>
    </div>
    </div>


